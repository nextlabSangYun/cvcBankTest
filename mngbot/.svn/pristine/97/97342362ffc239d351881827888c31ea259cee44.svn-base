@charset 'utf-8';

.main_cnt {background-repeat:repeat;min-height:100%;box-sizing:border-box;}
.main_cnt .inner {padding:20px 30px;}
.main_cnt .dashboard {position:relative;margin-bottom:10px;border:1px solid #c5c6cc;box-sizing:border-box;background:url('../images/bot/bg_wh_80.png') repeat 0 0;}
.main_cnt .sec_tit {padding-left:30px;line-height:52px;border-bottom:1px solid #ddd;font-size:22px;color:#444;}
.main_cnt .sec_tit p {padding-left:16px;background:url('../images/bot/bull_sec_tit.png') no-repeat 0 50%;}
.main_cnt .widget_list {padding:20px 40px 50px;}
.main_cnt .widget_list:after {content:'';display:block;clear:both;}
.main_cnt .widget {float:left;position:relative;height:500px;width:calc(50% - 10px);padding:0 15px 25px;border:3px solid #ddd;border-radius:3px;box-sizing:border-box;background:#fff;}
.main_cnt .widget_list .widget:nth-child(2n) {margin-left:20px;}
.main_cnt .widget_list .widget:nth-child(n+3) {margin-top:20px;}
.main_cnt .widget .wig_tit {padding:17px 0;font-size:16px;color:#848484;font-weight:medium;}
.main_cnt .widget .wig_tit span {display:inline-block;margin-left:10px;padding-left:20px;font-weight:bold;background:url('../images/bot/arr_sec_tit.png') no-repeat 0 50%;}
.main_cnt .widget .wig_cont {overflow-y:auto;height:420px;padding-right:10px;}
.main_cnt .widget .btn_delete {display:inline-block;overflow:hidden;position:absolute;right:15px;top:10px;width:24px;height:24px;text-indent:-999px;background:url('../images/bot/btn_wig_del.png') no-repeat 50% 50%;}
.main_cnt .dashboard .btn_add {position:absolute;right:22px;bottom:22px;}

.main_cnt .fav_apps {position:relative;border:1px solid #c5c6cc;box-sizing:border-box;background:url('../images/bot/bg_wh_80.png') repeat 0 0;}
.main_cnt .fav_apps ul {padding:16px 50px;height:138px;box-sizing:border-box;}
.main_cnt .fav_apps ul:after {content:'';display:block;clear:both;}
.main_cnt .fav_apps li {float:left;text-align:center;margin-right:100px;padding-bottom:8px;}
.main_cnt .fav_apps li a {color:#2a2a2a;}
.main_cnt .fav_apps li span {position:relative;}
.main_cnt .fav_apps li a:hover span:after {content:'';display:block;position:absolute;left:0;bottom:-5px;width:100%;height:1px;margin-top:5px;background:#aaa;}
.main_cnt .fav_apps .app_icon {margin-bottom:12px;}

/* 시스템 설정 */
.system_setting_list {padding:13px 0;}
.system_setting_list h1 {margin-bottom:20px;font-size:19px;color:#444;}
.system_setting_list h1:after {content:'';display:block;width:100%;height:1px;margin-top:13px;background:#ccc;}
.system_setting_list ul {margin-bottom:83px;}
.system_setting_list ul:after {content:'';display:block;clear:both;}
.system_setting_list li {float:left;width:140px;height:140px;margin-right:20px;border:1px solid #eaeaea;text-align:center;box-sizing:border-box;line-height:18px;background:#fff;font-size:14px;}
.system_setting_list li:last-child {margin-right:0;}
.system_setting_list li a{display:block;height:100%;padding-top:30px;color:#454545;box-sizing:border-box;}
.system_setting_list li .ico {display:inline-block;height:43px;}
.system_setting_list li .name {display:block;margin-top:20px;}


.g_table03 .date {padding:18px 0;color:#444;}

.pop_wrap .widget_list:last-child {border-bottom:1px solid #ccc;}
.pop_wrap .widget_list:after {content:'';display:block;clear:both;}
.pop_wrap .widget_list {overflow-y:auto;height:410px;}
.pop_wrap .widget_list .widget {float:left;width:50%;height:205px;padding:20px 10px;box-sizing:border-box;}
.pop_wrap .widget_list .widget .icon {display:block;margin-bottom:16px;text-align:center;}
.pop_wrap .widget_list .widget .chk {padding-left:15px;position:relative;}
.pop_wrap .widget_list .widget .chk input {position:absolute;left:0;top:2px;}
.pop_wrap .widget_list .widget label {line-height:18px;margin:0 0 0 8px;}

.login_wrap {position:relative;height:100%;width:100%;padding-top:50px;min-height:500px;min-width:400px;box-sizing:border-box;background-image:url('../images/bot/bg_main.png')}
.com_logo {position:absolute;left:44px;top:32px;z-index:1;}
.login_box {position:absolute;left:50%;top:50%;margin:-165px 0 0 -172px;width:343px;background:#fff;}
.login_wrap h1 {line-height:48px;text-align:center;font-weight:bold;color:#fff;font-size:21px;background:#2f3e9e;}
.login_wrap .login_area {padding:30px 20px 0;border:1px solid #dadada;border-top:0;}
.login_wrap .login_area input[type="text"]{margin-bottom:8px;}
.login_wrap .login_area input[type="password"] {margin-bottom:15px;}
.login_wrap .btn_wrap {padding:26px 0 22px;text-align:center;}
.login_wrap .btn_login {display:inline-block;width:170px;height:45px;border-radius:5px;line-height:45px;color:#fff;font-weight:bold;font-size:21px;background:#6668d0;}
.login_wrap .login_link {padding:15px 0 20px;border-top:1px solid #dadada;}
.login_wrap .login_link:after {content:'';display:block;clear:both;}
.login_wrap .login_link a {display:inline-block;float:left;padding-right:12px;font-size:13px;color:#777;background:url('../images/bot/arr_login_link.png') no-repeat 100% 50%;}
.login_wrap .login_link a:last-child {float:right;}

.mobile_num:after {content:'';display:inline-block;clear:both;}
.mobile_num select {float:left;min-width:calc(33.3% - 10px);}
.mobile_num span {display:inline-block;float:left;width:5px;margin:0 5px;line-height:30px;}
.mobile_num input {float:left;width:calc(33.3% - 10px);}

.my_photo_chg {position:relative;padding:15px 10px 15px 120px;}
.my_photo_chg .photo {display:inline-block;position:absolute;left:10px;top:15px;width:62px;height:62px;border-radius:31px;background-position:50% 50%;background-repeat:no-repeat;background-size:cover;}
.my_photo_chg .ctrl label, .my_photo_chg .ctrl button {display:inline-block;height:30px;width:108px;line-height:29px;border:1px solid #ccc;border-radius:3px;text-align:center;box-sizing:border-box;font-size:12px;color:#666;cursor:pointer;}
.my_photo_chg .ctrl button {margin-top:5px;}
.my_photo_chg .ctrl p {clear:both;padding-top:13px;font-size:13px;color:#959595;}

.pop_wrap .g_table {border-bottom:0;}
.pop_wrap .g_table .pagination {padding-bottom:0;}
.g_table td .icon {display:inline-block;}
.g_table td .icon img {height:26px;}
.g_table02 .ico_label {display:inline-block;max-width:40px;}
.g_table02 .ico_label img {width:100%;}

.bg_chg_area {position:relative;padding:20px 10px 20px 230px;height:158px;box-sizing:border-box;border-bottom:1px solid #dadada;}
.bg_chg_area .bg_img {display:inline-block;position:absolute;left:0;top:20px;width:210px;height:118px;background-size:210px;background-position:50% 50%;background-color:#aaa;background-repeat:no-repeat;}
.bg_chg_area .ctrl label, .bg_chg_area .ctrl button {display:inline-block;float:left;height:30px;padding:0 13px;line-height:30px;border:1px solid #ccc;border-radius:3px;box-sizing:border-box;font-size:12px;color:#666;cursor:pointer;}
.bg_chg_area .ctrl button {margin-left:10px;}
.bg_chg_area .ctrl p {clear:both;padding-top:13px;font-size:13px;color:#959595;line-height:18px}

.g_table02 .sel_tree {padding:0;}
.sel_tree .sel_tree_list {height:240px;overflow-y:auto;}
.sel_tree .list {position:relative;line-height:39px;border-bottom:1px solid #dadada;}
.sel_tree .list.on {background-color:#f3f4f9;}
.sel_tree .list input[type="checkbox"] {position:absolute;right:30px;top:50%;margin-top:-6px;}
.sel_tree .tit {padding-left:35px;background:#e9e9e9;}
.sel_tree .top {padding-left:35px;background:url('../images/bot/ico_folder.png') no-repeat 11px 50%;}
.sel_tree .sub1 {padding-left:35px;background:url('../images/bot/ico_tree.png') no-repeat 15px 50%;}
.sel_tree .sub2 {padding-left:60px;background:url('../images/bot/ico_tree.png') no-repeat 40px 50%;}
.sel_tree .sub3 {padding-left:85px;background:url('../images/bot/ico_tree.png') no-repeat 65px 50%;}
.sel_tree .sub2 .auth_name, 
.sel_tree .sub3 .auth_name {position:relative;padding-left:10px;}
.sel_tree .sub2 .auth_name:before, 
.sel_tree .sub3 .auth_name:before{content:'';display:inline-block;position:absolute;top:50%;left:0;margin-top:-3px;width:3px;height:3px;margin-right:7px;background:#8a93cf;vertical-align:top}

/* 통계 위젯  */
.wig_stats_list:after {content:'';display:block;clear:both;}
.wig_stats_list li {float:left;width:33.3%;padding:25px 0;}
.ico_rpt {text-align:center;}
.ico_rpt .rd_rpt {display:inline-block;width:100px;height:100px;margin-bottom:12px;border-radius:50px;font-weight:bold;font-size:23px;color:#fff;line-height:100px;}
.ico_rpt .name {overflow:hidden;height:36px;width:146px;margin:0 auto;word-break:break-all;line-height:18px;color:#2a2a2a;box-sizing:border-box;white-space:normal;text-align:center;}
.ico_rpt .name a {display:block;line-height:18px;color:#2a2a2a;}

/* 앱 진행 */
.app_tit {margin-bottom:12px;font-size:15px;font-weight:bold;}
.app_tit a {color:#2f3e9e;}
.app_state {margin-bottom:20px;}
.app_state .con_col2{height:166px;background:#eee;}
.app_state:last-child {margin-bottom:0;}
.app_state .con_col2:after {content:'';display:block;clear:both;}
.app_state .l_cont {float:left;width:50%;padding:22px;box-sizing:border-box;}
.app_state .r_cont {float:right;width:50%;padding:21px 0;box-sizing:border-box;}
.app_state .l_cont .date {margin-bottom:10px;font-size:14px;color:#555;}
.app_state .l_cont .st_txt {font-size:25px;font-weight:bold;color:#333;}
.app_state .r_cont:after {content:'';display:block;clear:both;}
.app_state .r_cont .item {width:80px;float:left;text-align:center;}
.app_state .r_cont .item:nth-child(n+3) {margin-top:23px;}
.app_state .r_cont .item:first-child {margin-right:42px;}
.app_state .st_grape {position:relative;margin-bottom:8px;height:80px;}
.app_state .st_grape .na {line-height:82px;font-size:30px;font-weight:bold;}
.app_state .st_grape .na .point_cr02 {color:#f73b28;}
.app_state .item .tit {margin-bottom:8px;font-weight:bold;font-size:15px;color:#333;}
.app_state .item .num {color:#555;}
.app_state .grape {width:80px;height:80px;border-radius:40px;position:relative;background:#aaa;}
.app_state .grape .bar {position:absolute;left:0;top:0;width:80px;height:80px;border-radius:40px;background:#2f3e9e;clip:rect(0 40px 80px 0);}

.app_state .grape:before {content:'';position:absolute;left:0;top:0;width:80px;height:80px;border-radius:40px;background:#aaa;clip:rect(0 40px 80px 0);z-index:100;}
.app_state .grape .per {position:absolute;left:50%;top:50%;margin:-30px 0 0 -30px;width:60px;height:60px;border-radius:30px;background:#eee;line-height:60px;color:#2f3e9e;font-size:19px;font-weight:bold;z-index:100;}
.app_state .grape.over:before {background:#2f3e9e;transform:rotate(180deg)}
.app_state .red .grape .bar {background:#f73b28;}
.app_state .red .grape.over:before {background:#f73b28;}
.app_state .red .grape .per {color:#f73b28}
.app_state .full .grape .bar {clip:auto;}